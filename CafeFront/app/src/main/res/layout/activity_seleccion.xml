<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionActivity"
    android:background="#7AFDFD">

    <TextView
        android:id="@+id/bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Quién eres?"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/bienvenido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/boton_trabajador"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:text="TRABAJADOR"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:backgroundTint="#CDCDCD"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar"/>

    <Button
        android:id="@+id/boton_cliente"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="CLIENTE"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textColorLink="#69E684"
        android:backgroundTint="#CDCDCD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boton_trabajador"
        android:layout_marginTop="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>